mixin compare-item(brand,name,item_img)
  div.item
    div.item__compare-icons
      div.icon.item__compare-icon.item__compare-icon--pin
        include ../../img/icons/pin.svg
      div(data-id="").icon.item__compare-icon.item__compare-icon--remove
        include ../../img/icons/remove.svg
    a(href="/shop-detail.html").item__brand= brand
    a(href="/item-detail.html")
      h3.item__title= name
    a(href="/item-detail.html")
      div(style="background-image: url("+item_img+")").item__img
    div(style="position: relative;")
      div.item__price
        div.item__sale
          div.item__oldprice 30 499
          div.item__percent -20%
        div.item__newprice 26 785 ₽
      div.item__icons
        div(data-id="").icon.item__icon.item__icon--wishlist
          include ../../img/icons/heart.svg
    div.item__rating
      h4.text3 Рейтинг
      div.item__stars
        div.star.active
          include ../../img/icons/star.svg
        div.star.active
          include ../../img/icons/star.svg
        div.star.active
          include ../../img/icons/star.svg
        div.star.active
          include ../../img/icons/star.svg
        div.star
          include ../../img/icons/star.svg
    div.item__props
      h4.text3 Цвет
      p.text1 Бежевый
      h4.text3 Материал
      p.text1 Натуральная кожа
      h4.text3 Размер
      p.text1 201 x 95 x 90
      h4.text3 Бренд
      p.text1 Pushe
    a.btn.btn--gold.btn--message Заказать товар
        
section.section.compare
  div.container
    h1.title1 Сравнение товаров
    div.compare__wrapper
      div.compare__arrow.compare__arrow--prev
      div.compare__arrow.compare__arrow--next
      div.compare__carousel
        +compare-item("Pushe","Диван-кровать арти 2","/img/demo/item2.jpg")
        +compare-item("Pushe","Кресло «Лайоль»","/img/demo/item3.jpg")
        +compare-item("Pushe","прикроватная тумба «верона max»","/img/demo/item5.jpg")
        +compare-item("Pushe","Кровать «Капри» Diamond","/img/demo/item6.jpg")
        +compare-item("Pushe","ДИВАН ОСТИН","/img/demo/item7.jpg")
        +compare-item("Ладья","ДИВАН ХИЛТОН Y31","/img/demo/item8.jpg")
      div.compare__pinned
        
        
div.popup.popup--message
  div.popup__inner
    div.popup__close
    div.message-form
      form(id="",action="").reg-form
        label.reg-form__input.text2
          input(type="text", name="")
          span Имя<sup>*</sup>
        label.reg-form__input.text2
          input(type="email", name="")
          span Email<sup>*</sup>
        label.reg-form__input.text2
          input(type="text", name="").phoneinput
          span Телефон
        label.reg-form__input.text2
          textarea(name="",placeholder="Сообщение")
        button.btn.btn--gold Отправить
        

        
        
