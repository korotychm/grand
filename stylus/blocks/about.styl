.about
  &__item
    background var(--gray1)
    padding 100px 0
    position relative
    @media (max-width: 1023px)
      margin 0 -25px
      padding 70px 25px
    @media (max-width: 767px)
      margin 0 -16px
      padding 50px 16px
    .container
      display flex
      justify-content space-between
      @media (max-width: 767px)
        display block
    &:nth-child(even)
      background var(--white)
      .slick-arrow
      .slick-counter
        right auto !important
        left 0
        &.slick-next
          left 150px
          @media (max-width: 1267px)
            left 105px
      .about__text a
        right auto !important
        left 25px !important
      .container
        flex-direction row-reverse
  &__text
    width 40%
    @media (max-width: 1680px)
      width 43%
    @media (max-width: 767px)
      width 100%
    .title1
      margin-bottom 50px
      max-width none
      @media (max-width: 1267px)
        margin-bottom 30px
      @media (max-width: 767px)
        margin-bottom 20px
    p
      @media (max-width: 1680px)
        font-size 16px
      @media (max-width: 1023px)
        font-size 14px
    a
      display inline-block
      color var(--red)
      margin-top 40px
      @media (max-width: 1267px)
        position absolute
        right 25px
        top 54vw
      @media (max-width: 767px)
        position static
        margin 30px 0
  &__slider
    width 50%
    position relative
    padding-top 100px
    @media (max-width: 1267px)
      padding-top 80px
    @media (max-width: 1023px)
      padding-top 60px
    @media (max-width: 767px)
      width 100%
    .slick-arrow
    .slick-counter
      top -90px
      right 0
      @media (max-width: 1267px)
        top -70px
      @media (max-width: 1023px)
        top -50px
      &.slick-prev
        right 150px
        @media (max-width: 1267px)
          right 105px
    img
      width 100%
      height auto
      display block
