.blog-detail
  padding-bottom 100px
  h1
    @media (max-width: 1267px)
      margin-bottom 40px
    @media (max-width: 767px)
      margin-bottom 20px
  h1 + p
    padding 0 350px
    margin-bottom -100px
    @media (max-width: 1680px)
      padding 0 150px
      margin-bottom -50px
    @media (max-width: 1267px)
      margin-bottom -20px
    @media (max-width: 1023px)
      padding-right 0
      margin-bottom 0
    @media (max-width: 767px)
      padding-left 0
  .container
    position relative
  &__pagination
    display flex
    position absolute
    top -70px
    right 0
    @media (max-width: 1267px)
      top -60px
    .pagination-arrow
      position static
    .pagination-counter
      position static
      width 90px
  &__carousel
    position relative
    margin-left -10px
    margin-right -10px
    margin-bottom -70px
    @media (max-width: 1267px)
      padding 0 60px
      margin-bottom -20px
    @media (max-width: 1023px)
      margin-bottom 0
      padding 0
      width 120%
      .slick-arrow
        display none
    @media (max-width: 767px)
      width 150%
    &::before
    &::after
      content ''
      display block
      height 100%
      width 20px
      background var(--white)
      position absolute
      z-index 2
      top 0
      left -10px
    &::after
      left auto
      right -10px
    &:last-child
      margin-bottom 0
    .slick-arrow
      position absolute
      top 50%
      transform translateY(-50%)
      left -80px
      @media (max-width: 1680px)
        left -50px
      @media (max-width: 1267px)
        left 10px
      &.slick-next
        left auto
        right -80px
        transform translateY(-50%) rotate(180deg)
        @media (max-width: 1680px)
          right -50px
        @media (max-width: 1267px)
          left auto
          right 10px
    img
      display block
      margin 0 10px
  &__text
    padding-right 100px
    @media (max-width: 1680px)
      font-size 16px
    @media (max-width: 1267px)
      padding-right 60px
      .title1
          font-size 28px
          margin-bottom 30px
          @media (max-width: 1267px)
            font-size 26px
            margin-bottom 20px
          @media (max-width: 767px)
            font-size 18px
            margin-bottom 15px
    @media (max-width: 1023px)
      padding-left 150px !important
      padding-right 0 !important
    @media (max-width: 767px)
      padding 0 !important
  &__img
    width 60%
    position relative
    flex-shrink 0
    @media (max-width: 767px)
      width 100%
      padding 0 16px
      margin-left 0
    &::before
      content ''
      display block
      height 100%
      width 1660px
      position absolute
      top 0
      right -70px
      border 1px solid #C4C4C4
      pointer-events none
      @media (max-width: 1680px)
        width 650px
        right -50px
      @media (max-width: 1267px)
        width 520px
        right -30px
      @media (max-width: 1023px)
        right auto !important
        left -25px !important
        width 450px
      @media (max-width: 767px)
        left 0 !important
        width 100%
    @media (max-width: 1680px)
      width 50%
    @media (max-width: 1267px)
      width calc(50% - 30px)
      margin-right 30px
    @media (max-width: 1023px)
      width 400px
      margin-right 0
      margin-left 25px !important
      margin-bottom 70px
    @media (max-width: 767px)
      margin-left 0 !important
      margin-bottom 50px
      width 100%
  &__block
    font-size 20px
    color #4F4F4F
    position relative
    display flex
    align-items center
    margin 200px 0
    @media (max-width: 1680px)
      margin 120px 0
    @media (max-width: 1267px)
      margin 80px 0
    @media (max-width: 1023px)
      flex-direction column-reverse !important
      align-items flex-start
      margin 70px 0
    @media (max-width: 767px)
      margin 50px 0
    &:last-child
      margin-bottom 0
    .title1
      color var(--black)
    img
      position relative
      top 90px
      width 100%
      height auto
      display block
      @media (max-width: 1680px)
        top 50px
      @media (max-width: 1267px)
        top 30px
      @media (max-width: 767px)
        top 30px
      @media (max-width: 767px)
        top 16px
    &--textright
      flex-direction row-reverse
      .blog-detail__img
        @media (max-width: 1267px)
          margin-left 30px
          margin-right 0
        &::before
          left -70px
          right auto
          @media (max-width: 1680px)
            left -50px
          @media (max-width: 1267px)
            left -30px

      .blog-detail__text
        padding-right 0
        padding-left 100px
        @media (max-width: 1267px)
          padding-left 60px
        p
          margin-bottom 0
