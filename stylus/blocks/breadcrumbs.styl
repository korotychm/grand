.breadcrumbs
  padding 70px 0 50px
  @media (max-width: 1267px)
    padding 40px 0
  @media (max-width: 1023px)
    padding 40px 25px
  @media (max-width: 767px)
    padding 40px 16px
  ul
    padding 0
    margin 0
    list-style none
    display flex
    align-items center
    flex-wrap wrap
    position relative
    padding-left 5px
  + .section
    padding-top 0 !important
    background var(--white) !important
  &__back
    position absolute
    top 0
    left 0
  &__link
    margin-left 15px
    color var(--gray3)
    @media (max-width: 767px)
      margin-left 8px
    img
      display block
    a
      white-space nowrap
      color inherit
      text-decoration none
      transition .5s
      &:hover
        @media (hover)
          color var(--gold)
    &::after
      content '/'
      padding-left 15px
      @media (max-width: 767px)
        padding-left 8px
    &:last-child::after
      display none
