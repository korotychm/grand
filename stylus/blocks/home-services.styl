.home-services
  .container
    display grid
    grid-template-columns 1fr 3fr
    @media (max-width: 1680px)
      display block
      border-top 1px solid #C4C4C4
      padding-top 20px
  &__right
    border-top 1px solid #C4C4C4
    padding-top 90px
    display grid
    grid-template-columns 1fr 1fr
    @media (max-width: 1680px)
      border none
      padding-top 70px
    @media (max-width: 767px)
      display block
      padding-top 30px
  &__img
    img
      width 100%
      height auto
      display block
    @media (max-width: 767px)
      display none
  &__accordion
    padding-right: 220px
    @media (max-width: 1680px)
      padding-right 110px
    @media (max-width: 1023px)
      padding-right 30px
    @media (max-width: 767px)
      padding-right 0
  &__accordion-item
    cursor pointer
    margin-bottom 20px
    @media (max-width: 1023px)
      margin-bottom 15px
    &:last-child
      margin 0 !important
    h3
      cursor pointer
      position relative
      margin 0
      display inline-block
      transition .5s
    &.active h3::after
    &:hover h3::after
      content ''
      display block
      width 30px
      height 9px
      position absolute
      top 11px
      right -60px
      background url(../img/icons/service-arrow.svg)
      background-size contain
      background-repeat no-repeat
      @media (max-width: 1680px)
        top 8px
    div
      padding-top 40px
      display none
      color var(--gray3)
      padding-bottom: 60px
      @media (max-width: 1680px)
        padding-top 30px
        padding-bottom 30px
      @media (max-width: 1023px)
        padding-top 20px
    &:first-child div
      display block
