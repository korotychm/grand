.home-shops
  .container
    display flex
    @media (max-width: 767px)
      display block
      position relative
      padding-bottom 80px
  &__heading
    width 33.333%
    display flex
    flex-direction column
    justify-content space-between
    align-items flex-start
    .title1
      color var(--gold)
    @media (max-width: 767px)
      width 100%
      display block
      .btn
        position absolute
        bottom 0
        left 50%
        transform translateX(-50%)
  &__links
    width 66.666%
    @media (max-width: 767px)
      width 100%
    div
      width: calc(100% + 30px)
      display flex
      flex-wrap wrap
      margin-bottom -20px
      @media (max-width: 1680px)
        width calc(100% + 20px)
      @media (max-width: 767px)
        margin-bottom -15px
        width calc(100% + 10px)
      a
        max-width none
        display block
        color inherit
        text-decoration none
        margin-bottom 20px
        transition .5s
        @media (max-width: 1680px)
          font-size 32px
        @media (max-width: 1267px)
          font-size 28px
        @media (max-width: 767px)
          font-size 18px
          margin-bottom 15px
        &:hover
          @media (hover)
            color var(--red)
        &::after
          content '/'
          padding 0 30px
          color var(--black)
          @media (max-width: 1680px)
            padding 0 20px
          @media (max-width: 767px)
            padding 0 10px
        &:last-child::after
          display none
