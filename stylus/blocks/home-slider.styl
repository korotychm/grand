.home-slider
  position relative
  &__social
    position absolute
    top 55%
    right 40px
    z-index 2
    display flex
    transform rotate(-90deg)
    width 0
    overflow-x visible
    a
      margin 0 15px
      color var(--white)
      text-decoration none
    @media (max-width: 1680px)
      top 70%
    @media (max-width: 1023px)
      display none
  &__contact
    position absolute
    z-index 2
    bottom 40px
    left 0
    display flex
    padding 0 30px
    color #fff
    @media (max-width: 1023px)
      bottom 30px
    @media (max-width: 767px)
      flex-wrap wrap
      justify-content space-between
      width 100%
      bottom 20px
      padding 0 16px
    a
      color inherit
      text-decoration none
      display flex
      align-items center
      margin-right 100px
      @media (max-width: 1267px)
        margin-right 40px
      @media (max-width: 1023px)
        font-size 12px
        margin-right 30px
      @media (max-width: 767px)
        margin 10px 0
      .icon
        height 18px
        width 18px
        margin-right 8px
        @media (max-width: 1023px)
          height 14px
          width 14px
        svg
          height 100%
          width auto

  .slick-dots
    position absolute
    left 30px
    top 50%
    transform translateY(-50%)
    padding 0
    margin 0
    list-style none
    @media (max-width: 1267px)
      display none !important
    li
      position relative
      span
        color var(--white)
        position absolute
        left 50px
        top -6px
        opacity 0
    button
      display block
      border 0
      border-radius 0
      width 20px
      height 11px
      font-size 0
      background none
      margin 2px 0
      transition .5s
      cursor pointer
      position relative
      &:hover
        width 40px
      &::before
        content ''
        position absolute
        top 5px
        left 0
        display block
        width 100%
        height 1px
        background var(--white)
    .slick-active
      button
        width 40px
        + span
          opacity 1
