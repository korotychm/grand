.item-detail
  background var(--gray1)
  > .container
    position relative
    display grid
    grid-template-columns minmax(300px, 4fr) minmax(300px, 3fr)
    grid-gap 80px
    @media (max-width: 1680px)
      grid-gap 50px
      grid-template-columns minmax(300px, 1fr) minmax(300px, 1fr)
    @media (max-width: 1267px)
      grid-gap 30px
    @media (max-width: 1023px)
      display block
    &::after
      content ''
      display block
      width calc(50vw - (var(--scrollbar-width) / 2))
      height 100%
      background #fff
      position absolute
      right 0
      top 0
      transform translateX(100%)
  &__left
    padding-bottom 150px
    @media (max-width: 1267px)
      padding-bottom 100px
    @media (max-width: 1023px)
      padding-bottom 70px
  &__right
    padding-bottom 150px
    background #fff
    padding 70px 0 70px 90px
    @media (max-width: 1680px)
      padding 70px 0 70px 50px
    @media (max-width: 1267px)
      padding 40px 0 70px 30px
    @media (max-width: 1267px)
      padding 40px 25px 70px
    @media (max-width: 767px)
      padding 40px 16px 50px
  &__scroll
    max-height 0
    overflow-y scroll
    width calc(100% + 50vw - 760px - (var(--scrollbar-width) / 2));
    padding-right calc(50vw - 760px - (var(--scrollbar-width) / 2));
    @media (max-width: 1680px)
      width calc(100% + 50vw - 550px - (var(--scrollbar-width) / 2));
      padding-right calc(50vw - 550px - (var(--scrollbar-width) / 2));
    @media (max-width: 1267px)
      width 100%
      padding-right 0
    @media (max-width: 1023px)
      max-height none !important
  &__icons
    display flex
    align-items center
    .item__icon
      height 15px
      width 18px
      @media (max-width: 1023px)
        margin-top 0
  &__rating
    display flex
    margin-right 5px
    .star
      width 15px
      height 15px
      margin-right 5px
      color var(--gold)
      &.active svg g#star
        fill var(--gold)
  &__price
    display flex
    align-items center
    justify-content space-between
    margin 40px 0
    position relative
    flex-wrap wrap
    @media (max-width: 767px)
      padding-right 100px
    .btn
      min-width 200px
      @media (max-width: 1680px)
        min-width 150px
      @media (max-width: 1267px)
        height 44px
      @media (max-width: 1267px) and (min-width: 1024px)
        margin-top 60px
      @media (max-width: 1023px)
        min-width 200px
      @media (max-width: 767px)
        margin-top 30px
    .item__newprice
      font-size 36px
      margin 5px 0
      @media (max-width: 1680px)
        font-size 26px
    .item__oldprice
    .item__percent
      font-size 18px
      color var(--gray3)
      @media (max-width: 1680px)
        font-size 16px
  &__privilege-sign
    margin-left 30px
    @media (max-width: 1267px) and (min-width: 1024px)
      position absolute
      right 35px
      top 20px
      margin 0
    @media (max-width 1023px)
      margin-left 250px
    @media (max-width: 767px)
      position absolute
      margin 0
      top 118px
      right 0
  &__economy
    font-size 16px
    color var(--gray3)
    @media (max-width: 1680px)
      font-size 14px
  &__contact
    color var(--gray3)
    a
      display flex
      align-items center
      margin-bottom 20px
      text-decoration none
      color inherit
      .icon
        color var(--gold)
        margin-right 10px
        height 18px
        width 18px
        svg
          width 100%
          height auto

  &__panel
    display none
    padding 15px 0 30px
    font-size 20px
    color #4F4F4F
    @media (max-width: 1267px)
      font-size 16px
    @media (max-width: 767px)
      font-size 14px
    table
      td
        padding-bottom 15px
        padding-right 40px
      tr:last-of-type
        td
          padding-bottom 0
      &.fullwidth
        td
          width 50%
          padding-right 0
          vertical-align top
          &:last-child
            text-align right
  &__colors
    display grid
    grid-template-columns 1fr 1fr 1fr 1fr
    grid-gap 10px
    a
      position relative
      display block
      &::before
        content ''
        display block
        padding-bottom 100%
      img
        position absolute
        display block
        left 50%
        top 50%
        transform translate(-50%,-50%);
        width auto !important;
        max-width 100% !important;
        height auto;
        max-height 100%
  &__reviews
    &-trigger
      margin 20px 0 40px
      padding-top 10px
      border-top 1px solid #E0E0E0
      transition .5s
      cursor pointer
      &:hover
        @media (hover)
          color var(--gold)
      &::before
        content 'Раскрыть еще отзывы'
      &.active::before
        content 'Скрыть отзывы'
    &-form
      position relative
      h3
        font-weight bold
        margin 0 0 30px
      textarea
        margin -20px 0 20px
        width 100%
        border 1px solid #BDBDBD
        height 140px
        &:focus
          border 1px solid var(--gold)
    &-stars
      display flex
      position absolute
      top 0
      left 150px
      .icon
        width 20px
        margin-right 5px
        color var(--gold)
        cursor pointer
        &:first-child
        &.active
        &.hover
          @media (hover)
            svg g#star
              fill var(--gold)
  &__review
    display none
    margin-top 30px
    &:nth-child(-n+3)
    &.active
      display block
    &:first-child
      margin-top 0
    &-name
      display flex
      align-items center
      margin-bottom 7px
      h3
        margin 0
        font-size 16px
        font-family var(--text-font)
        width 150px
    &-date
      color var(--gray3)
    &-content
      h4
        margin 20px 0 10px
        font-size 16px
        font-family var(--text-font)
      p
        margin 0
        margin-top 7px
    &-images
      margin-top 15px
      display flex
      img
        display block
        height 100px
        width auto
        margin-right 10px
  &__accordion
    margin-top 30px
    label
      position relative
      display block
      padding 15px 0
      border-bottom 1px solid #C4C4C4
      user-select none
      cursor pointer
      font-size 20px
      transition .5s
      @media (max-width: 1267px)
        font-size 16px
      &:hover
        @media (hover)
          color var(--gold)
      &:last-of-type
        border 0
      &::before
      &::after
        content ''
        position absolute
        display block
        width 11px
        height 1px
        top 27px
        right 15px
        background var(--black)
      &::after
        transform rotate(90deg)
      span
        color var(--gray3)
    input
      display none
      &:checked
        + label
          border 0
          &::after
            opacity 0
          + .item-detail__panel
            display block
            border-bottom 1px solid #c4c4c4

  &__photos
    display flex
    flex-wrap wrap
    margin -15px
    @media (max-width: 1267px)
      margin -15px
    @media (max-width: 1023px)
      padding 0 5px 0 25px
    .controls
      display flex
      flex-wrap wrap
      width 100%
      @media (max-width: 1023px)
        width calc(100% + 25px)
        overflow-x auto
        flex-wrap nowrap
    .large
    .controls div
      background var(--white)
      position relative
      width calc(50% - 30px)
      margin 15px
      cursor pointer
      transition .5s
      @media (max-width: 1267px)
        margin 5px
        width calc(50% - 20px)
      @media (max-width: 1023px)
        width 40%
        flex-shrink 0
      &::before
        content ''
        display block
        padding-bottom 70%
      img
        position absolute
        display block
        left 50%
        top 50%
        transform translate(-50%,-50%);
        width auto !important;
        max-width 100% !important;
        height auto;
        max-height 100%
    .controls div
      &:hover
        @media (hover)
          opacity .7
    .large
      width calc(100% - 30px)
  .item__brand
    font-size 24px
    @media (max-width: 767px)
      font-size 18px
  .title1
    max-width none
    margin 30px 0 25px
    @media (max-width: 1267px)
      font-size 32px
      margin 20px 0
    @media (max-width: 767px)
      font-size 18px
      margin 15px 0 20px
.item-detail + .catalog-carousel
.item-detail + .catalog-carousel .slick-list::before
  background var(--gray2)
