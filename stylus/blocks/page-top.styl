.page-top
  position relative
  background-size cover
  &::before
    content ''
    display: block
    padding-bottom 50%
    background #35342C
    opacity .4
    @media (max-width: 767px)
      padding-bottom 150%
  .container
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)
  &__text
    display inline-block
    max-width 770px
    position absolute
    left 100px
    top 50%
    transform translateY(-50%)
    color var(--white)
    margin-top -50px
    @media (max-width: 1267px)
      max-width 500px
      margin-top -30px
    @media (max-width: 1023px)
      left 75px
      max-width 400px
      margin-top -20px
    @media (max-width: 767px)
      left 36px
      max-width 320px
  &__title
    display inline-block
    margin 0
    font-size 75px
    line-height 1.2
    text-transform uppercase
    @media (max-width: 1680px)
      font-size 60px
    @media (max-width: 1267px)
      font-size 48px
    @media (max-width: 1023px)
      font-size 36px
    @media (max-width: 767px)
      font-size 26px
  &__subtitle
    margin 30px 0
    width 350px
    position absolute
    left 50%
    @media (max-width: 1680px)
      margin 20px 0
    @media (max-width: 1023px)
      font-size 16px
    @media (max-width: 767px)
      font-size 14px
      left 30px
      margin 5px 0
      width 280px

.page-head .page-top::before
      padding-bottom 40%
      @media (max-width: 767px)
        padding-bottom 50%
.page-head--catalog
  position relative
  margin-top 100px
  @media (max-width: 1680px)
    margin-top 50px
  @media (max-width: 1267px)
    margin-top 40px
  @media (max-width: 1023px)
    margin-top 30px
  .page-top
    height 500px
    @media (max-width: 1680px)
      height 400px
    @media (max-width: 1267px)
      height 300px
    @media (max-width: 1023px)
      height 250px
    @media (max-width: 767px)
      height 170px
    .container
      top 0
      transform translateX(-50%)
    &::before
      padding 0
      height 100%
    &__text
      margin 0
      max-width 1200px
      top 90px
      left 50%
      transform translateX(-50%)
      @media (max-width: 1267px)
        top 70px
      @media (max-width: 1023px)
        top 50px
      @media (max-width: 767px)
        top 30px
    &__title
      white-space nowrap
    &__subtitle
      width 500px
      @media (max-width: 1267px)
        margin-top 15px
      @media (max-width: 1023px)
        margin-top 10px
        left 0
        padding-left 90px
      @media (max-width: 767px)
        margin-top 5px
        padding-left 30px
        width 300px
  .page-head__nav
    width 100%
    position absolute
    bottom 40px
    display flex
    justify-content space-around
    @media (max-width: 1267px)
      bottom 20px
    @media (max-width: 767px)
      display none
    a
      color var(--white)
      border-bottom 1px solid transparent
      transition .5s
      text-decoration none
      &:hover
        @media (hover)
          border-bottom 1px solid var(--white)
