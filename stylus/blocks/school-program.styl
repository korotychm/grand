.school-program
  .title1
    margin-bottom 60px
    @media (max-width: 1267px)
      margin-bottom 50px
    @media (max-width: 767px)
      margin-bottom 30px
  &__switcher
    display flex
    margin-bottom 100px
    flex-wrap wrap
    @media (max-width: 1267px)
      margin-bottom 50px
    @media (max-width: 767px)
      margin-bottom 30px
    div
      cursor pointer
      transition .5s
      padding 20px 35px
      border 1px solid var(--gray4)
      width 300px
      margin-right 30px
      @media (max-width: 767px)
        width 100%
        margin-right 0
        margin-bottom 20px
        text-align center
        padding 20px
        &:last-child
          margin-bottom 0
      &.active
      &:hover
        border 1px solid var(--gold)
      &.active
        background var(--gold)
        color var(--white)
      .title2
        margin 0 0 10px
        @media (max-width: 767px)
          font-size 16px
      .text1
        margin 0
        @media (max-width: 767px)
          font-size 14px
  &__top
    display flex
    justify-content space-between
    align-items center
    margin-bottom 70px
    @media (max-width: 767px)
      display block
      margin-bottom 30px
    .tags
      max-width calc(100% - 250px)
      @media (max-width: 767px)
        max-width 100%
        display grid
        grid-template-columns 1fr 1fr
        margin 0
        padding 0
        grid-gap 10px
        a
          margin 0
          text-align center
  &__all
    color var(--red)
    @media (max-width: 767px)
      display block
      text-align center
      margin-top 20px
  &__panel
    display none
    &.active
      display block
  &__day
    align-items stretch
    display none
    @media (max-width: 767px)
      margin-top 30px
    &.active
      display flex
      @media (max-width: 1267px)
        display block
      &:last-of-type
        .school-program__item:last-child
          border-bottom 1px solid var(--gray4)
  &__left
    width 25%
    flex-shrink 0
    padding-bottom 50px
    @media (max-width: 1680px)
      width 30%
    @media (max-width: 1267px)
      width 100%
    @media (max-width: 767px)
      text-align center
      padding-bottom 30px
    h4
      font-size 36px
      margin 0
      margin-bottom 30px
      font-family var(--text-font)
      text-transform uppercase
      font-weight 500
      @media (max-width: 767px)
        font-size 24px
        margin-bottom 20px
  &__item
    display grid
    grid-template-columns 1fr 5fr 2fr
    align-items center
    border-top 1px solid var(--gray4)
    padding 80px 0
    @media (max-width: 1680px)
      grid-template-columns 1fr 3fr 1fr
      padding 50px 0
    @media (max-width: 767px)
      display flex
      flex-wrap wrap
      border none
      align-items flex-start
      padding 25px 0
  &__img
    margin 0
    @media (max-width: 767px)
      width 100%
      margin-top 20px
    img
      width 100%
      display block
  &__time
    @media (max-width: 767px)
      width 23%
      margin-right 2%
    h5
      margin 0 0 15px
      font-size 32px
      font-family var(--text-font)
      font-weight 400
      @media (max-width: 767px)
        font-size 18px
        margin-bottom 5px
    p
      margin 0
      color var(--gray3)
      @media (max-width: 767px)
        font-size 14px
  &__text
    padding-right 100px
    @media (max-width: 1680px)
      padding-right 50px
    @media (max-width: 767px)
      padding 0
      width 75%
    p
      margin 0
      font-size 24px
      @media (max-width: 1023px)
        font-size 18px
      @media (max-width: 767px)
        font-size 16px
