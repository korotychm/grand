.school
  &__left
    width 50%
    padding-right 200px
    @media (max-width: 1680px)
      padding-right 80px
      width 55%
    @media (max-width: 1023px)
      padding-right 30px
    @media (max-width: 767px)
      width 100%
      padding-right 0 !important
      padding-left 0 !important
    h2
      max-width none
      margin-bottom 30px
      @media (max-width: 1267px)
        font-size 24px
        margin-bottom 20px
      @media (max-width: 1023px)
        font-size 18px
        margin-bottom 15px
    .text1
      @media (max-width: 1023px)
        font-size 14px

  &__right
    width 50%
    @media (max-width: 1680px)
      width 45%
    @media (max-width: 767px)
      width 100%
      margin-bottom 20px
    img
      width 100%
      display block
  &__item
    display flex
    align-items center
    margin-bottom 180px
    @media (max-width: 1680px)
      margin-bottom 100px
    @media (max-width: 1023px)
      margin-bottom 70px
    @media (max-width: 767px)
      flex-direction column-reverse !important
      margin-bottom 50px
    &:last-child
      margin 0
    &:nth-child(even)
      flex-direction row-reverse
      .school__left
        padding-left 200px
        padding-right 0
        @media (max-width: 1680px)
          padding-left 80px
