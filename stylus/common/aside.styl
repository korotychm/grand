.aside
  padding 50px 100px 0
  position fixed
  left 0
  top 0
  z-index 999
  background var(--white)
  transform translateX(-110%)
  transition .5s
  height 100vh
  max-width 500px
  box-shadow 1px 0 10px rgba(0, 0, 0, 0.1)
  @media (max-width: 1267px)
    max-width none
    padding 30px 40px 0
    width 450px
  @media (max-width: 767px)
    width calc(100vw - var(--scrollbar-width))
    padding 30px 16px 0
  &.active
    transform translateX(0)
  &__close
    position absolute
    z-index 10
    top 44px
    left 30px
    width 30px
    height 30px
    cursor pointer
    background none
    box-shadow none
    border none
    transition: .5s
    @media (max-width: 1267px)
      top 25px
    &:hover
      @media (hover)
        opacity .8
    &::before
    &::after
      content ''
      width 30px
      height 2px
      background var(--black)
      position absolute
      left 0
      top 14px
      transform rotate(45deg)
    &::after
      transform rotate(-45deg)
.tc-switch
  display flex
  justify-content flex-end
  position relative
  background inherit
  &::before
    content ''
    position absolute
    width calc(100% + 200px)
    height 60px
    left -100px
    top -30px
    display block
    background inherit
    z-index 2
    @media (max-width: 1267px)
      width calc(100% + 80px)
      left -40px
  &__dropdown
    background var(--gold)
    position absolute
    width calc(100% + 200px)
    left -100px
    top 30px
    height 60px
    display flex
    align-items center
    justify-content space-between
    padding 0 50px
    transform translateY(-60px)
    transition transform .5s
    @media (max-width: 1267px)
      width calc(100% + 80px)
      left -40px
    a
      color var(--white)
      text-decoration none
      border-bottom 1px solid var(--white)
  &__link
    z-index 3
    color inherit
    margin-left 20px
    cursor pointer
    transition .5s
    &--home
      color var(--gold)
    &--dropdown
      padding-right: 20px
      position relative
      &::after
        content ''
        position absolute
        top 2px
        right 0
        display block
        width 12px
        height 12px
        background url(../img/icons/down.svg) no-repeat center
        transition .5s
      &.active::after
        transform rotate(180deg)
      &.active + .tc-switch__dropdown
        transform translateY(0) !important
    &:hover
      @media (hover)
        opacity .8
.aside-fixed
  margin-top 90px
  @media (max-width: 1267px)
    margin-top 70px
  a
    text-decoration none
    color var(--gray3)
    transition .5s
    &:hover
      @media (hover)
        color var(--gold)
  .title2
    margin-bottom 35px
    font-weight 500
    @media (max-width: 1267px)
      margin-bottom 30px
  .aside-scrollable
    width calc(100% + 100px)
    padding-right 100px
    max-height calc(100vh - 300px)
    padding-bottom 25px
    overflow auto
    @media (max-width: 1267px)
      width calc(100% + 40px)
      padding-right 40px
      max-height calc(100vh - 220px)
    @media (max-width: 767px)
      width calc(100% + 30px)
      max-height calc(100vh - 200px)
      padding-right 30px
    @media (hover)
      &::-webkit-scrollbar
        width 8px
        background var(--white)
      &::-webkit-scrollbar-thumb
        background var(--white)
        border-radius 4px
        transition .5s
      &:hover::-webkit-scrollbar-thumb
        background var(--gray4)

.aside-catalog
  margin-bottom 90px
  user-select none
  @media (max-width: 1267px)
    margin-bottom 50px
  a
    text-decoration none
    color inherit
    transition .5s
    &:hover
      @media (hover)
        color var(--gold) !important
  &__categories
    border-top 1px solid #C4C4C4
    list-style none
    padding 0
    overflow-y hidden
    &.active
      height auto
      li.toggle-category {
        display block !important
      }
    li.toggle-category
      position relative
      padding 15px 0
      border-bottom 1px solid #C4C4C4
      cursor pointer
      padding-right 50px
      min-width 270px
      display none
      transition: .5s
      @media (max-width: 767px)
        min-width 0
        width 100%
      &:nth-child(-n+5){
        display block
      }
      &.active .aside-catalog__subcategories
        display block !important
      &:hover
        @media (hover)
          color var(--gold)
      &.active:hover
        @media (hover)
          color inherit
      &::before
      &::after
        content ''
        display block
        height 1px
        width 11px
        background var(--black)
        position absolute
        top 27px
        right 0
      &::after
        transform translateY(-50%) rotate(90deg)
      &.active::after
        opacity: 0
  &__subcategories
    list-style none
    padding 15px 0 0
    border-top 1px solid #C4C4C4
    margin-top 15px
    display none
    li
      display block
      padding 0
      color var(--gray4)
      margin-bottom 15px
      border none
      &:last-child
        margin-bottom 5px
      a
        display block
        width 100%
  &__toggle
    background none
    box-shadow none
    border none
    font-size 16px
    line-height 1
    color var(--gold)
    width 100%
    position relative
    text-align left
    padding 0
    text-transform uppercase
    cursor pointer
    transition .5s
    &:hover
      @media (hover)
        opacity .7
    &::before
      content 'Больше категорий'
    &.active::before
      content 'Меньше категорий'
    &::after
      content ''
      width 12px
      height 5px
      display block
      position absolute
      right 0
      top 50%
      transform translateY(-50%) rotate(180deg)
      background url(../img/icons/down--gold.svg)
      transition .5s
    &.active::after
      transform translateY(-50%)
.aside-menu
  margin-bottom 70px
  @media (max-width: 1267px)
    margin-bottom 50px
  a
    display block
    text-transform uppercase
    font-size 20px
    margin-bottom 20px
    color inherit
    transition .5s
    text-decoration none
    &:hover
      @media (hover)
        color var(--gold)
    &:last-child
      margin 0
.aside-contact
  &__item
    display flex
    align-items center
    margin-bottom 15px
    &:last-child
      margin 0
    svg
      display block
      margin-right 10px
      margin-top 2px
      width 15px
      height auto
    .text2
      margin 0
      a
        color inherit
        text-decoration none
.aside-social
  margin-top 50px
  display flex
  a
    color var(--gray3)
    margin-right 30px
    text-decoration none
    transition .5s
    &:hover
      @media (hover)
        color var(--gold)
    &:last-child
      margin-right 0
