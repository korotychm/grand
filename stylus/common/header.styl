.header
  position fixed
  left 0
  top 0
  width 100%
  padding 50px 30px
  display flex
  justify-content space-between
  align-items center
  z-index 10
  @media (max-width: 1267px)
    padding 30px 30px
  @media (max-width: 1023px)
    padding 30px 25px
  @media (max-width: 767px)
    padding 30px 16px
  &--colored
    background #423F37
  &__left
  &__right
    display flex
    align-items center
  &__right
    padding-left 50px
    position relative
    @media (max-width: 767px)
      background inherit
      z-index 10
    .icon
      width 25px
      height 25px
      margin-left 25px
      color #fff
      svg
        height 19px
      @media (max-width: 1267px)
        margin-left 20px
  &__search-close
    width 25px
    height 25px
    position absolute
    right 0
    top 0
    cursor pointer
    opacity 0
    pointer-events none
    transition .5s
    &::before
    &::after
      content ''
      position absolute
      left 0
      top 12px
      display block
      width 25px
      height 2px
      background var(--white)
      transform rotate(45deg)
    &::after
      transform rotate(-45deg)
  &__search
    position absolute
    top 0
    right 100px
    width 25px
    overflow-x hidden
    transition .5s
    @media (max-width: 1023px)
      right 90px
    input
      background none
      width 100%
      height 32px
      padding 0
      display block
      box-shadow none
      border none
      border-bottom 1px solid #fff
      color #fff
      font-family var(--text-font)
      font-size 16px
      padding-left 30px
      padding-bottom 5px
      opacity 0
      pointer-events none
      transition .5s
    button.icon
      position absolute
      left 0
      top 0
      background none
      border none
      box-shadow none
      padding 0
      cursor pointer
      margin-left 0
    &.active
      width calc(420px + 50vw - (var(--scrollbar-width) / 2))
      @media (max-width: 1680px)
        width calc(190px + 50vw - (var(--scrollbar-width) / 2))
      @media (max-width: 1267px)
        width calc(80px + 50vw - (var(--scrollbar-width) / 2))
      @media (max-width: 1023px)
        width calc(50vw - 20px - (var(--scrollbar-width) / 2))
      @media (max-width: 767px)
        background inherit
        width calc(100vw - 31px - var(--scrollbar-width)) !important
        right 0 !important
      input
      .header__search-close
        opacity 1
        pointer-events auto
  &__burger
    margin-right 30px
    display block
    position relative
    z-index 9
    cursor pointer
    width 30px
    height 20px
    background none
    box-shadow none
    border none
    transition: .5s
    @media (max-width: 767px)
      margin-right 20px
    &:hover
      @media (hover)
        opacity: .8
    div
      width 100%
      height 2px
      background var(--white)
      position absolute
      left 0
      top 9px
      transition .5s
      &:first-child
        transform: translateY(-8px);
      &:last-child
        transform: translateY(8px);
  &__logo
    position relative
    z-index 7
    min-width 150px
    @media (max-width: 1267px)
      height 20px !important
      min-width 175px
    @media (max-width: 767px)
      min-width 125px
    img
      display block
      @media (max-width: 1267px)
        position absolute
        left 0
        top 50%
        transform translateY(-50%)
        height auto !important
        width auto !important
        max-width 100%
        max-height 100%
  &__bottom
    position fixed
    z-index 9
    top 50px
    left 0
    width 100%
    background #fff
    box-shadow 0px 1px 10px rgba(0, 0, 0, 0.1)
    .header__logo
      margin-top 0 !important
    .container
      display flex
      align-items center
      justify-content space-between
      height 60px
      @media (max-width: 1023px)
        padding 0 25px
      @media (max-width: 767px)
        padding 0 16px
  &__nav
    display flex
    @media (max-width: 1023px)
      display none
    a
      color var(--black)
      margin-left 30px
      text-decoration none
      border-bottom 1px solid transparent
      transition .5s
      font-size 14px
      @media (max-width: 1680px)
        margin-left 20px
        font-size 12px
      &:hover
      &.active
        border-color var(--black)
  .container
    position absolute
    left 50%
    transform translateX(-50%)
    display flex
    justify-content space-between
    align-items center
    .tc-switch
      color var(--white)
      &__link
        margin-left 0
        opacity 1
        text-decoration none
        border-bottom 1px solid var(--white)
        padding-right 0
        &.active
          div
            right auto
            left -20px
            bottom -10px
            background var(--gold)
            box-shadow 0 3px 5px rgba(0,0,0,.3)
            padding 10px 20px 20px
            a
              text-align left
        &--dropdown::after
          right -20px
          background-image url(../img/icons/down--white.svg)

  &__contact
    position relative
    display flex
    color var(--white)
    z-index 2
    a
      text-decoration none
      display flex
      align-items center
      margin-left 30px
      font-size 14px
      font-weight 300
      color var(--white)
      @media (max-width: 1680px)
        font-size 12px
      @media (max-width: 1023px)
        order 2
        font-size 0
        margin-left 21px
        &.header__time
          order 1
          font-size 12px
          @media (max-width: 767px)
            display none
          .icon
            margin-right 5px !important
      .icon
        width 25px
        height 25px
        margin-right 3px
        @media (max-width: 1023px)
          margin-right 0
      svg
        display block
        height 17px
        width auto
  &--colored .header__logo
    filter grayscale(100%) brightness(10000%)
  &.sticky
    height 50px
    background #423F37
    padding 0 30px
    transition .5s
    .header__logo
      filter grayscale(100%) brightness(10000%)
    @media (max-width: 767px)
      padding 0 16px
  &--2
    height 50px
    align-items center
    background #423F37
    padding 0 30px
    @media (max-width: 1680px)
      padding 0 calc(50vw - 550px - (var(--scrollbar-width) / 2)) !important
    @media (max-width: 1267px)
      padding 0 30px !important
    @media (max-width: 1023px)
      padding 0 25px !important
      .header__right
        position absolute
        right 16px
        top 67px
        .icon
          color var(--black)
    @media (max-width: 767px)
      padding 0 16px !important
    .header__right
      background inherit
      @media (max-width: 1023px)
        background #fff
      @media (max-width: 767px)
        z-index 1
    .header__search.active
      width calc(630px + 50vw - (var(--scrollbar-width) / 2)) !important
      background inherit
      @media (max-width: 1680px)
        width calc(170px + 50vw - (var(--scrollbar-width) / 2)) !important
      @media (max-width: 1267px)
        width calc(230px + 50vw - (var(--scrollbar-width) / 2)) !important
      @media (max-width: 1023px)
        width 350px !important
        input
          border-bottom 1px solid var(--black)
          color var(--black)
        .header__search-close::after
        .header__search-close::before
          background var(--black)
      @media (max-width: 767px)
        width calc(100vw - 31px - var(--scrollbar-width)) !important
    .header__burger::after
      content 'Каталог'
      position absolute
      top 3px
      left 40px
      font-size 14px
      color var(--white)
      @media (max-width: 1680px)
        font-size 12px
      @media (max-width: 1023px)
        display none
    .container
      background inherit
      @media (max-width: 1680px)
        width 800px
      @media (max-width: 1267px)
        width 680px
        margin-left -20px
      @media (max-width: 1023px)
        width calc(100% - 60px)
        margin 0
        position static
        transform none
      @media (max-width: 767px)
        z-index 2
      .tc-switch
        height 50px
        display flex
        align-items center
        padding-bottom 2px
        &__link
          @media (max-width: 1680px)
            font-size 10px
            &::after
              top 0
        &::before
          top -10px
          width calc(50vw - (var(--scrollbar-width) / 2))
          left calc(760px - 50vw - (var(--scrollbar-width) / 2))
          @media (max-width: 1680px)
            left -150px
          @media (max-width: 1267px)
            left -85px
          @media (max-width: 767px)
            left -76px
            width 100vw
        &__dropdown
          padding 0
          width auto
          top 50px
          left calc(760px - 50vw - (var(--scrollbar-width) / 2))
          @media (max-width: 1680px)
            left -150px
          @media (max-width: 1267px)
            left -85px
          @media (max-width: 767px)
            left -76px
            width calc(100vw - (var(--scrollbar-width) / 2))
          a
            margin 0 30px
            white-space nowrap
            @media (max-width: 1680px)
              margin 0 15px

.all
  .header__logo
    display none
  .header__bottom .header__logo
    display block
  .header__contact a
    display none
    &.header__location
      display flex
      @media (max-width: 1023px)
        font-size 12px
        .icon
          margin-right 6px
  .header__search.active
    width calc(630px + 50vw - (var(--scrollbar-width) / 2))
    @media (max-width: 1680px)
      width calc(420px + 50vw - (var(--scrollbar-width) / 2))
    @media (max-width: 1267px)
      width calc(280px + 50vw - (var(--scrollbar-width) / 2))
    @media (max-width: 1023px)
      width calc(170px + 50vw - (var(--scrollbar-width) / 2))
    @media (max-width: 767px)
      width calc(100vw - 190px - var(--scrollbar-width))
.grand
  .header.sticky
  .header--2
  .header--colored
    background var(--grand)
  .header__logo
    margin-top -19px
    @media (max-width: 1267px)
      margin-top 0
    img
      width 100%
.yug
  .header.sticky
  .header--2
  .header--colored
    background var(--youg)
.elrai
  .header.sticky
  .header--2
  .header--colored
    background var(--elrai)
