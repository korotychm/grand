.filter
  margin-top 50px
  position relative
  z-index 4
  @media (max-width: 1680px)
    margin-top 30px
  @media (max-width: 767px)
    display none
    position fixed
    top 0
    left 0
    z-index 1000
    width calc(100vw - var(--scrollbar-width))
    height 100vh
    overflow-y auto
    background var(--white)
    padding 80px 15px 15px
    margin 0
    &::before
      content 'Фильтр'
      font-size 26px
      font-family var(--heading-font)
      text-transform uppercase
      width 100%
      display block
      text-align center
      position absolute
      top 30px
      left 0
    .btn
      width 100%
    &__close
      width 25px
      height 25px
      position absolute
      top 15px
      right 15px
      &::before
      &::after
        content ''
        display block
        position absolute
        left 0
        top 12px
        width 25px
        height 2px
        background var(--black)
        transform rotate(45deg)
      &::after
        transform rotate(-45deg)
  &__triggers
    background var(--gray1)
    padding 40px 30px
    display flex
    @media (max-width: 1680px)
      padding 30px
    @media (max-width: 1267px)
      padding 20px 25px
    @media (max-width: 767px)
      justify-content space-between
      padding 20px 40px 20px 20px
    .text2
      font-size 16px
    a
      cursor pointer
      position relative
      margin-right 50px
      border-bottom 1px solid transparent
      transition .5s
      user-select none
      @media (max-width: 767px)
        margin 0
      &::after
        content ''
        position absolute
        top 5px
        right -20px
        display block
        width 12px
        height 12px
        background url(../img/icons/down.svg) no-repeat center
        transition .5s
        @media (max-width: 767px)
          top 2px
      &.active::after
        transform rotate(180deg)
      &:hover
        @media (hover)
          border-bottom 1px solid var(--black)
  &__panel
    display none
    padding 30px 0 0
    grid-template-columns 1fr 1fr 1fr 1fr
    grid-gap 30px
    margin-bottom 20px
    @media (max-width: 1023px)
      grid-template-columns 1fr 1fr
      grid-gap 20px
    @media (max-width: 767px)
      grid-template-columns 1fr
    &.active
      display grid
  &__selected
    display flex
    flex-wrap wrap
    padding-right 100px
    position relative
    align-items center
    @media (max-width: 767px)
      display none
    div
      margin 30px 0
      display flex
      align-items center
      margin-right 30px
      &:last-of-type
        margin-right 0
      h4
        margin 0
        color var(--gray3)
        margin-right 10px
      a
        background var(--gold)
        color var(--white)
        padding 8px 15px
        border-radius 20px
        margin-right 10px
        display flex
        align-items center
        &:last-child
          margin-right 0
        span
          display block
          width 10px
          height 10px
          cursor pointer
          background url(../img/icons/clear.svg) no-repeat center
          background-size contain
          margin-left 15px
  &__clear
    position absolute
    right 0
    top 35px
  &__select
    position relative
    height 45px
    padding 12px 15px
    font-size 16px
    border 1px solid var(--gray4)
    color #4F4F4F
    cursor pointer
    transition .5s
    user-select none
    .text3
      font-size 16px
    &:hover
      @media (hover)
        border 1px solid var(--gold)
    &::after
      content ''
      position absolute
      top 15px
      right 15px
      display block
      width 12px
      height 12px
      background url(../img/icons/down.svg) no-repeat center
      transition .5s
    &.active
      z-index 2
      &::after
        transform rotate(180deg)
    &.active .filter__select-dropdown
      display block !important
      background var(--white)
    &-dropdown
      width calc(100% + 2px)
      display none
      position absolute
      padding 5px 15px
      border 1px solid var(--gray4)
      bottom 0
      left -1px
      transform translateY(100%)
      a
      label
        display block
        margin 15px 0
        cursor pointer
        color var(--gray3)
        transition .5s
        &:hover
          @media (hover)
            color var(--black)
        .active
          color var(--black)
        span
          padding-left 20px
          position relative
          &::before
            content ''
            display block
            width 10px
            height 10px
            position absolute
            left 0
            top 3px
            border 2px solid var(--gray3)
      a
        margin 0 -15px
        padding 10px 15px
        text-decoration none
        &:hover
          @media (hover)
            background var(--gray1)
      label
        input
          display none
          &:checked
            + span
              color var(--black)
              &::after
                content ''
                display block
                width 6px
                height 6px
                position absolute
                left 4px
                top 4px
                background var(--gray3)
  &__range
    *
      box-shadow none !important
  &__range-inputs
    display flex
    justify-content space-between
    margin 10px 0 20px
    div
      width 44%
      position relative
      &::after
        content 'от'
        position absolute
        left 10px
        top 13px
        font-size 12px
      &:last-child::after
        content 'до'
    input
      width 100%
      border-radius 0
      height 40px
      padding-left 30px
      border 2px solid var(--gray4)
.noUi-connects
  border-radius 0

.noUi-connect
  background var(--gold)
.noUi-target
  border none
  box-shadow none
  background var(--gray4)
  border-radius 0
  height 3px
  margin 0 10px
  position relative
  &::before
    content ''
    display block
    position absolute
    width calc(100% + 19px)
    left -9.5px
    top 0
    background var(--gray4)
    height 3px
.noUi-horizontal
  .noUi-handle
    border 3px solid var(--gold)
    background var(--white)
    width 20px
    height 20px
    top -8px
    right -10px
    border-radius 50%
    &::before
    &::after
      display none
