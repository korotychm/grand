.section-top
  display grid
  grid-template-columns 1fr 1fr
  @media (max-width: 1680px)
    grid-template-columns 2fr 3fr
  @media (max-width: 1023px)
    grid-template-columns 1fr 2fr
  @media (max-width: 767px)
    display block
    padding-right 30%
    position relative
    .title1
      margin-bottom 16px !important
      max-width 160px !important
  &__info
    display grid
    grid-template-columns 1fr 1fr
    margin-bottom 80px
    @media (max-width: 767px)
      display block
      margin-bottom 60px
    p
      color var(--gray3)
      padding-left 20px
      padding-right 40px
      margin 0
      @media (max-width: 1279px)
        padding 0
    a
      color var(--red)
      margin-left 80px
      transition .5s
      @media (max-width: 1279px)
        margin-left 0
        text-align right
      @media (max-width: 767px)
        position absolute
        top 5px
        right 0
      &:hover
        @media (hover)
          opacity .6
