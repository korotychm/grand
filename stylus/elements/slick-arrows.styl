.slick-arrow
.pagination-arrow
  box-shadow none
  background none
  border-radius 50%
  font-size 0
  width 50px
  height 50px
  border 1px solid var(--black)
  display flex
  align-items center
  justify-content center
  cursor pointer
  transition opacity .5s
  position absolute
  @media (max-width: 1680px)
    width 40px
    height 40px
  @media (max-width: 1279px)
    width 30px
    height 30px
  &.slick-disabled
    pointer-events none
    opacity .3
.slick-arrow:hover
.pagination-arrow:hover
  @media (hover)
    opacity .5
.slick-arrow::before
.pagination-arrow::before
  content ''
  display block
  width 10px
  height 21px
  margin-right: 2px
  margin-bottom: 1px
  background url(../img/icons/arrow.svg) no-repeat center
  background-size contain
  @media (max-width: 1680px)
    width 8px
    height 17px
  @media (max-width: 1279px)
    width 6px
    height 13px
.slick-next
.pagination-next
  transform rotate(180deg)
