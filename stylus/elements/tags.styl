.tags
  display flex
  flex-wrap wrap
  margin-bottom -20px
  width calc(100% + 20px)
  @media (max-width: 1023px)
    flex-wrap nowrap
    overflow-x auto
    width calc(100% + 25px)
  @media (max-width: 767px)
    width calc(100% + 32px)
    padding 0 16px
    margin-left -16px
  a
    padding 11px 25px 13px
    border 1px solid var(--gold)
    margin 0 20px 20px 0
    color var(--black)
    text-decoration none
    cursor pointer
    transition .5s
    @media (max-width: 1680px)
      padding 15px 20px 14px
      font-size 14px
    @media (max-width: 1023px)
      flex-shrink 0
    @media (max-width: 767px)
      margin-right 10px
    &:hover
    &.active
      background var(--gold)
      color var(--white)
  &__trigger
    display none
    @media (max-width: 1023px) and (min-width: 768px)
      display block
      background var(--gray1)
      padding 20px 25px
      div
        position relative
        display inline-block
        &::after
          content ''
          position absolute
          top 2px
          right -20px
          display block
          width 12px
          height 12px
          background url(../img/icons/down.svg) no-repeat center
          transition .5s
      & + .tags
        display none !important
      &.active
        margin-bottom 30px
        div::after
          transform rotate(180deg)
      &.active + .tags
        display grid !important

  &--mobile-select
    @media (max-width: 767px)
      width 100%
      overflow hidden
      border 1px solid #BDBDBD
      padding 15px 15px 0
      display flex !important
      flex-direction column
      margin-left 0
      position relative
      &::after
        content ''
        position absolute
        top 20px
        right 15px
        display block
        width 12px
        height 12px
        background url(../img/icons/down.svg) no-repeat center
        transition .5s
      a
        margin-bottom 15px
        display block
        text-align left !important
        padding 0
        border none
        background var(--white) !important
        color var(--black) !important
        font-size 16px
        display none
        order 2
        &.active
          display block
          order 1
      &.active
        a
          display block
        &::after
          transform rotate(180deg)
